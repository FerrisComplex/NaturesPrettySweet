<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <TaleDef>
    <defName>WildFlowerBloom</defName>
    <label>Wildflower bloom</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>20</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->wildflowers bloomed all over [pawn_nameShortDef]'s [community]</li>
        <li>tale_noun->the wildflowers surrounding [pawn_nameShortDef]'s [community]</li>
        <li>tale_noun->[pawn_nameShortDef]'s [community] surrounded by wildflowers</li>
        <li>image->[color] and [color] wildflowers bloomed [circumstance_phrase]</li>
        <li>image->a fabulous pattern of [color] petals [circumstance_phrase]</li>
        <li>image->a huge burst of [color] blossoms [circumstance_phrase]</li>
        <li>image->[color] and [color] petals highlight [circumstance_phrase]</li>
        <li>image->blooming flowers of [color] surround [circumstance_group]</li>
        <li>circumstance_phrase->around a [terrainfeature]</li>
        <li>circumstance_phrase->on a [terrainfeature]</li>
        <li>circumstance_phrase->blooming around a [community]</li>
        <li>circumstance_phrase->blossom in the shade of a [terrainfeature] and a [terrainfeature]</li>
        <li>desc_sentence->Nearby, [pawn_nameShortDef] plays [game] with a [friendlyadjective] look.</li>
        <li>desc_sentence->[pawn_nameShortDef] picks flowers, clutching them in [pawn_possessive] hand.</li>
        <li>desc_sentence->[quantity_adjphrase] [outlander]s sniff flowers nearby.</li>
        <li>desc_sentence->[pawn_nameShortDef] sits near a [terrainfeature], surrounded by flowers.</li>
        <li>desc_sentence->[quantity_adjphrase] [animal]s wander peacefully through the bloom.</li>
        <li>desc_sentence->There is no [enemy] in sight.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>

    <TaleDef>
    <defName>Superbloom</defName>
    <label>Superbloom</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>20</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->a superbloom covered [pawn_nameShortDef]'s [community] with flowers</li>
        <li>tale_noun->the superbloom surrounding [pawn_nameShortDef]'s [community]</li>
        <li>tale_noun->[pawn_nameShortDef]'s [community] surrounded by wildflowers from a superbloom</li>
        <li>image->[color] and [color] wildflowers blossomed [circumstance_phrase]</li>
        <li>image->a fabulous pattern of [color] petals [circumstance_phrase]</li>
        <li>image->a huge burst of [color] blossoms [circumstance_phrase]</li>
        <li>image->[color] and [color] petals highlight [circumstance_phrase]</li>
        <li>image->blooming flowers of [color] surround [circumstance_group]</li>
        <li>circumstance_phrase->around a [terrainfeature]</li>
        <li>circumstance_phrase->on a [terrainfeature]</li>
        <li>circumstance_phrase->blooming around a [community]</li>
        <li>circumstance_phrase->blossom in the shade of a [terrainfeature] and a [terrainfeature]</li>
        <li>desc_sentence->Nearby, [pawn_nameShortDef] plays [game] with a [friendlyadjective] look.</li>
        <li>desc_sentence->[pawn_nameShortDef] stares in glee. [pawn_nameShortDef] has never seen so many flowers.</li>
        <li>desc_sentence->[quantity_adjphrase] [outlander]s sniff flowers nearby.</li>
        <li>desc_sentence->[pawn_nameShortDef] sits near a [terrainfeature], surrounded by flowers.</li>
        <li>desc_sentence->[quantity_adjphrase] [animal]s wander peacefully through the bloom.</li>
        <li>desc_sentence->There is no [enemy] in sight.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
  </Defs>