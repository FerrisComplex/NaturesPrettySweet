<?xml version="1.0" encoding="UTF-8"?>
<Defs>
   <!-- Savanna and Grasslands -->
   <ThingDef ParentName="TreeBase">
      <defName>TKKN_PlantTreeBaobab</defName>
      <label>baobab tree</label>
      <description>Long lived tree that store water in their trunks.</description>
      <graphicData>
         <texPath>TKKN_NPS/Things/Plant/TreeBaobab</texPath>
         <graphicClass>Graphic_Random</graphicClass>
      </graphicData>
      <statBases>
         <Beauty>2</Beauty>
      </statBases>
      <plant>
         <leaflessGraphicPath>TKKN_NPS/Things/Plant/VarientLeafless/TreeBaobab_Leafless</leaflessGraphicPath>
         <growDays>60</growDays>
         <harvestWork>1000</harvestWork>
         <harvestYield>75</harvestYield>
         <wildClusterSizeRange>
            <min>2</min>
            <max>4</max>
         </wildClusterSizeRange>
         <wildClusterRadius>5</wildClusterRadius>
		<visualSizeRange>
			<min>2</min>
			<max>4</max>
		</visualSizeRange>

      </plant>
   </ThingDef>
   <ThingDef ParentName="TreeBase">
      <defName>TKKN_PlantTreeAcacia</defName>
      <label>umbrella thorn acacia tree</label>
      <description>Hardy plant known to tolerate high alkalinity, drought, high temperatures, sandy and stony soils, strongly sloped rooting surfaces, and sand blasting.</description>
      <graphicData>
         <texPath>TKKN_NPS/Things/Plant/TreeAcacia</texPath>
         <graphicClass>Graphic_Random</graphicClass>
      </graphicData>
      <statBases>
         <Beauty>2</Beauty>
      </statBases>
      <plant>
         <growDays>30</growDays>
         <harvestWork>1000</harvestWork>
         <harvestYield>50</harvestYield>
         <wildClusterSizeRange>
            <min>2</min>
            <max>4</max>
         </wildClusterSizeRange>
         <wildClusterRadius>5</wildClusterRadius>
      </plant>
   </ThingDef>
   
   <ThingDef ParentName="TreeBase">
      <defName>TKKN_PlantTreeGum</defName>
      <label>gum tree</label>
      <description>Smooth barked, fast growing tree that guzzles water and repells insects.</description>
      <graphicData>
         <texPath>TKKN_NPS/Things/Plant/TreeGum</texPath>
         <graphicClass>Graphic_Random</graphicClass>
      </graphicData>
      <statBases>
         <Beauty>2</Beauty>
      </statBases>
      <plant>
         <growDays>15</growDays>
         <harvestWork>1000</harvestWork>
         <harvestYield>30</harvestYield>
         <wildClusterSizeRange>
            <min>2</min>
            <max>4</max>
         </wildClusterSizeRange>
         <wildClusterRadius>5</wildClusterRadius>
		  <visualSizeRange>
			<min>1.0</min>
			<max>1.7</max>
		  </visualSizeRange>

      </plant>

   </ThingDef>
   <ThingDef ParentName="PlantBase">
      <defName>TKKN_PlantSunflower</defName>
      <label>giant sunflower</label>
      <description>A tall flower named because it turns its face to follow the sun.</description>
      <statBases>
         <MaxHitPoints>85</MaxHitPoints>
         <Beauty>4</Beauty>
      </statBases>
      <graphicData>
         <texPath>TKKN_NPS/Things/Plant/Sunflower</texPath>
         <graphicClass>Graphic_Random</graphicClass>
      </graphicData>
      <hideAtSnowDepth>0.5</hideAtSnowDepth>
      <ingestible>
         <nutrition>0.18</nutrition>
      </ingestible>
      <plant>
         <fertilitySensitivity>0.0</fertilitySensitivity>
         <growDays>2.5</growDays>
         <sowTags>
            <li>Ground</li>
         </sowTags>
         <fertilityMin>0.05</fertilityMin>
         <maxMeshCount>25</maxMeshCount>
         <visualSizeRange>
            <min>0.3</min>
            <max>0.4</max>
         </visualSizeRange>
         <topWindExposure>0.3</topWindExposure>
         <reproduceMtbDays>3</reproduceMtbDays>
         <wildClusterSizeRange>
            <min>6</min>
            <max>8</max>
         </wildClusterSizeRange>
         <wildClusterRadius>4</wildClusterRadius>
      </plant>
   </ThingDef>
</Defs>