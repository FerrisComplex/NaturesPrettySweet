  <TaleDef>
    <defName>TKKN_Drought</defName>
    <label>drought</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>5</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun-&gt;[pawn_nameShortDef] stares at the sky, hoping for rain</li>
        <li>tale_noun-&gt;a dry wind blows around [pawn_nameShortDef]'s [community]</li>
        <li>tale_noun-&gt;the plants are slowing drying out at [pawn_nameShortDef]'s [community]</li>
